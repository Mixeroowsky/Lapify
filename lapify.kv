#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import Factory kivy.factory.Factory

<MyPopup@Popup>:
    auto_dismiss: False
    title: 'Nowa sesja'
    Button:
        text: 'Zamknij okno'
        on_release: root.dismiss()

ScreenManagement:
	transition: FadeTransition()
    StronaGlowna:
    Live:
	PoprzednieSesje:
	Pomoc:

<StronaGlowna>:
	name: "main"
	canvas:
	    Color:
	        rgb: [.7,.7,.7,1]
	    Rectangle:
	        pos: self.pos
	        size: self.size
	Button:
		text: 'Strona Glowna'
		pos_hint: {"x": 0, "top":1}
		size_hint: 0.1, 0.05
		font_size: 15
		background_normal: ''
		background_color: [1,.55,0,1]
		on_release: app.root.current = "main"

	Button:
		text: 'LIVE'
		pos_hint: {"x": 0.1, "top":1}
		size_hint: 0.1, 0.05
		font_size: 15
		background_normal: ''
		background_color: [1,.55,0,1]
		on_release: app.root.current = "live"

	Button:
		text: 'Poprzednia Sesja'
		pos_hint: {"x": 0.2, "top":1}
		size_hint: 0.1, 0.05
		font_size: 15
		background_normal: ''
		background_color: [1,.55,0,1]
		on_release: app.root.current = "history"

	Button:
		text: 'Pomoc'
		pos_hint: {"x": 0.3, "top":1}
		size_hint: 0.1, 0.05
		font_size: 15
		background_normal: ''
		background_color: [1,.55,0,1]
		on_release: app.root.current = "help"


	Button:
		text: '+ Rozpocznij nowa sesje'
		pos_hint: {"x": 0.7, "top":0.5}
		size_hint: 0.2, 0.25
		font_size: 20
		background_color: [.7,.7,.7,1]
		on_release: Factory.MyPopup().open()

	Button:
		pos_hint: {"x": 0.4, "top":1}
		size_hint: 0.6, 0.05
		background_normal: ''
		background_color: [1,.55,0,1]



